# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
quote_type = auto
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.{eslintrc,js,json}]
indent_size = 2
max_line_length = 80

[*.js]
quote_type = single
